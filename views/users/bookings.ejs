<h2>My Bookings</h2>
<% if (bookings.length > 0) { %>
  <ul class="list-group">
    <% bookings.forEach(booking => { %>
      <li class="list-group-item">
        <strong>Listing:</strong> <%= booking.listing.title %><br>
        <strong>Check-in:</strong> <%= new Date(booking.checkIn).toDateString() %><br>
        <strong>Check-out:</strong> <%= new Date(booking.checkOut).toDateString() %><br>
        <strong>Guests:</strong> <%= booking.guests %>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p class="text-muted">You have no bookings yet.</p>
<% } %>
<a href="/user/profile" class="btn btn-secondary mt-3">Back to Profile</a>
