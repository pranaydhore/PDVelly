<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-12">
        <!-- Property Header -->
        <div class="property-header mb-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h1 class="property-title"><%= listing.title %></h1>
                    <div class="property-meta d-flex align-items-center gap-3">
                        <div class="rating-badge">
                            <i class="fa-solid fa-star text-warning"></i>
                            <span><%= listing.avgRating ? listing.avgRating.toFixed(1) : "0.0" %></span>
                            <span class="text-muted">(<%= listing.reviews.length %> reviews)</span>
                        </div>
                        <span class="text-muted">·</span>
                        <div class="location-badge">
                            <i class="fa-solid fa-map-marker-alt text-danger"></i>
                            <span><%= listing.location %>, <%= listing.country %></span>
                        </div>
                    </div>
                </div>
                <div class="property-actions d-flex gap-2">
                    <button class="btn btn-outline-dark btn-sm rounded-pill">
                        <i class="fa-solid fa-share"></i> Share
                    </button>
                    <button class="btn btn-outline-danger btn-sm rounded-pill" onclick="toggleWishlist()">
                        <i class="fa-regular fa-heart"></i> Save
                    </button>
                </div>
            </div>
        </div>

        <!-- Property Images -->
        <div class="property-images mb-4">
            <div class="main-image-container" style="height: 400px; border-radius: 16px; overflow: hidden;">
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="w-100 h-100" style="object-fit: cover;">
            </div>
        </div>

        <!-- Property Details -->
        <div class="row">
            <div class="col-lg-8">
                <div class="property-info">
                    <!-- Host Info -->
                    <div class="host-section mb-4 pb-4 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="host-avatar me-3">
                                <i class="fa-solid fa-user-circle" style="font-size: 3rem; color: #666;"></i>
                            </div>
                            <div>
                                <h4 class="mb-1">Hosted by <%= listing.owner ? listing.owner.username : 'Host' %></h4>
                                <p class="text-muted mb-0">Superhost · Hosting for 3 years</p>
                            </div>
                        </div>
                    </div>

                    <!-- Property Features -->
                    <div class="features-section mb-4 pb-4 border-bottom">
                        <div class="feature-item d-flex mb-3">
                            <div class="feature-icon me-3">
                                <i class="fa-solid fa-home" style="font-size: 1.5rem; color: #ff385c;"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Entire place</h6>
                                <p class="text-muted mb-0">You'll have the whole place to yourself</p>
                            </div>
                        </div>
                        <div class="feature-item d-flex mb-3">
                            <div class="feature-icon me-3">
                                <i class="fa-solid fa-broom" style="font-size: 1.5rem; color: #ff385c;"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Enhanced Clean</h6>
                                <p class="text-muted mb-0">This host committed to PDVolley’s cleaning protocol</p>
                            </div>
                        </div>
                        <div class="feature-item d-flex">
                            <div class="feature-icon me-3">
                                <i class="fa-solid fa-calendar-check" style="font-size: 1.5rem; color: #ff385c;"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Free cancellation</h6>
                                <p class="text-muted mb-0">Cancel anytime before check-in</p>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="description-section mb-4 pb-4 border-bottom">
                        <h5 class="mb-3">About this place</h5>
                        <p class="description-text">
                            <%= listing.description %>
                        </p>
                        <button class="btn btn-link p-0 text-decoration-underline" onclick="toggleDescription()">
                            Show more <i class="fa-solid fa-chevron-right"></i>
                        </button>
                    </div>

                    <!-- Amenities -->
                    <div class="amenities-section mb-4 pb-4 border-bottom">
                        <h5 class="mb-3">What this place offers</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="amenity-item d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-wifi me-3 text-success"></i>
                                    <span>Free WiFi</span>
                                </div>
                                <div class="amenity-item d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-car me-3 text-success"></i>
                                    <span>Free parking</span>
                                </div>
                                <div class="amenity-item d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-snowflake me-3 text-success"></i>
                                    <span>Air conditioning</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="amenity-item d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-utensils me-3 text-success"></i>
                                    <span>Kitchen</span>
                                </div>
                                <div class="amenity-item d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-tv me-3 text-success"></i>
                                    <span>TV</span>
                                </div>
                                <div class="amenity-item d-flex align-items-center mb-2">
                                    <i class="fa-solid fa-bath me-3 text-success"></i>
                                    <span>Private bathroom</span>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-dark rounded-pill mt-3">
                            Show all amenities
                        </button>
                    </div>

                    <!-- Map Section -->
                   <div class="map-section mb-4">
    <h5 class="mb-3">Where you'll be</h5>
    <div id="map" style="border-radius: 12px; overflow: hidden; width: 100%; max-width: 800px; height: 450px; margin: auto;">
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d24300.808501059913!2d79.09154404421356!3d21.264091180785176!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sharke%20house%20khaparkheda!5e0!3m2!1sen!2sin!4v1755428745169!5m2!1sen!2sin" 
            width="100%" 
            height="100%" 
            frameborder="0" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
    </div>
    <p class="mt-2 text-muted text-center">
        <strong><%= listing.location %>, <%= listing.country %></strong>
    </p>
</div>
 
                </div>
            </div>

            <!-- Booking Card -->
            <div class="col-lg-4">
                <div class="booking-card sticky-top" style="top: 2rem;">
                    <div class="card border-0 shadow-lg" style="border-radius: 16px;">
                        <div class="card-body p-4">
                            <div class="price-section mb-3">
                                <div class="d-flex align-items-baseline">
                                    <h3 class="price-amount mb-0">₹<%= listing.price.toLocaleString() %></h3>
                                    <span class="text-muted ms-1">night</span>
                                </div>
                                <div class="rating-small">
                                    <i class="fa-solid fa-star text-warning"></i>
                                    <span><%= listing.avgRating ? listing.avgRating.toFixed(1) : 'N/A' %></span>
                                    <span class="text-muted">(<%= listing.reviews.length %> reviews)</span>
                                </div>
                            </div>

                            <!-- Booking Form -->
                            <form action="/" class="booking-form" method="post" >
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label fw-bold">CHECK-IN</label>
                                        <input type="date" class="form-control" style="border-radius: 8px;">
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label fw-bold">CHECK-OUT</label>
                                        <input type="date" class="form-control" style="border-radius: 8px;">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">GUESTS</label>
                                    <select class="form-select" style="border-radius: 8px;">
                                        <option value="1">1 guest</option>
                                        <option value="2">2 guests</option>
                                        <option value="3">3 guests</option>
                                        <option value="4">4 guests</option>
                                        <option value="5">5+ guests</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-danger w-100 mb-3" style="background: #ff385c; border: none; border-radius: 12px; padding: 0.8rem; font-weight: 600; font-size: 1.1rem;">
                                    Reserve
                                </button>
                                <p class="text-center text-muted mb-3" style="font-size: 0.9rem;">
                                    You won't be charged yet
                                </p>

                                <!-- Price Breakdown -->
                                <div class="price-breakdown">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>₹<%= listing.price.toLocaleString() %> × 5 nights</span>
                                        <span>₹<%= (listing.price * 5).toLocaleString() %></span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Cleaning fee</span>
                                        <span>₹<%= Math.round(listing.price * 0.1).toLocaleString() %></span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Service fee</span>
                                        <span>₹<%= Math.round(listing.price * 0.05).toLocaleString() %></span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Taxes</span>
                                        <span>₹<%= Math.round(listing.price * 5 * 0.18).toLocaleString() %></span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span>Total</span>
                                        <span>₹<%= Math.round((listing.price * 5) + (listing.price * 0.1) + (listing.price * 0.05) + (listing.price * 5 * 0.18)).toLocaleString() %></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="reviews-section mt-5">
            <div class="d-flex align-items-center mb-4">
                <i class="fa-solid fa-star text-warning me-2"></i>
                <h4 class="mb-0"><%= listing.avgRating ? listing.avgRating.toFixed(1) : "0.0" %> · <%= listing.reviews.length %> reviews</h4>
            </div>

            <% if(currUser) { %>
            <!-- Leave a Review Form -->
            <div class="col-12 col-md-8 mb-4">
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add some comments for review</div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
            <% } %>

            <!-- All Reviews List -->
            <div class="row">
                <% listing.reviews.forEach(function(review) { %>
                    <div class="card col-md-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@<%= review.author ? review.author.username : "Anonymous"  %></h5>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                            <% if(currUser && review.author && currUser._id.equals(review.author._id)) { %>
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-3">
                                <button class="btn btn-sm btn-dark" onclick="return confirm('Are you sure you want to delete this review?');">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Action Buttons for Hosts -->
        <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
        <div class="host-actions mt-5 pt-4 border-top">
            <div class="d-flex gap-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning rounded-pill">
                    <i class="fa-solid fa-edit me-2"></i>Edit Listing
                </a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger rounded-pill" onclick="return confirm('Are you sure you want to delete this listing?')">
                        <i class="fa-solid fa-trash me-2"></i>Delete Listing
                    </button>
                </form>
            </div>
        </div>
        <% } %>
    </div>
</div>
